jasonyundt.website
#localhost:2015

encode zstd gzip
root * ./root/

handle_errors {
	@404 expression `{http.error.status_code} == 404`
	rewrite @404 /not_found.html

	@not_404 expression `{http.error.status_code} != 404`
	respond @not_404 "{http.error.status_code} {http.error.status_text}"
	file_server
}

file_server
